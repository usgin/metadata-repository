extends ./base

block page-title
	title Harvest
	
block styles
	link(rel="stylesheet/less", type="text/css", href="/static/css/harvest.less")
	link(rel="stylesheet", type="text/css", href="/static/css/jqueryui/jquery-ui-1.8.16.custom.css")
	
block scripts
	script(type="application/javascript", src="/static/lib/jquery-ui-1.8.16.custom.min.js")
	script(type="application/javascript", src="/static/lib/underscore-1.3.3.min.js")
	script(type="application/javascript", src="/static/lib/backbone-0.9.2.min.js")
	script(type="application/javascript", src="/static/lib/jade.js")
	script(type="application/javascript", src="/static/js/utils.js")
	script(type="application/javascript", src="/static/js/models.js")
	{% autoescape off %}
	script(type="application/javascript") collections = #{collections};
	{% endautoescape %}
	script(type="application/javascript", src="/static/js/harvest-views.js")
	script(type="application/javascript", src="/static/js/harvest.js")
	
block page-content
	#harvest-form-block
		#harvest-form-title.block-title Harvest remote metadata
		#harvest-form-content.block-content
			form#new-harvest(name="harvestForm", method="post")
				#input-type-container.input-container
					#input-type-title.input-title Select an input format
					ul#input-type-list
						each format in formats
							li
								input(id=format.key, type="radio", name="harvestFormat", value=format.key) 
								label(for=format.key)   #{format.label}
				#input-collection-container.input-container
					#input-collection-title.input-title Add harvested metadata to a collection?
					input#collection-selector
					input#selected-collection(style="display:none;", name="collection")
				#input-url-container.input-container
					#input-url-title.input-title Enter the metadata URL
					input#input-url(name="url")
				#harvest-button-container					